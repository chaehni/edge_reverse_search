{
  "name": "Image Reverse",
  "author": "Claude HÃ¤hni",
  "version": "1.0",
  "description": "Reverse-search images with different search providers.\n\nIcon made by Icon Monk from www.flaticon.com",

  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },

  "browser_action": {
    "default_icon": {
      "20": "images/pngs/20.png",
      "40": "images/pngs/40.png"
    },
    "default_title": "Image Reverse",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/pngs/16.png",
    "32": "images/pngs/32.png",
    "48": "images/pngs/48.png",
    "128": "images/pngs/128.png",
    "176": "images/pngs/176.png"
  },

  "permissions": [
    "contextMenus",
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  }
}
